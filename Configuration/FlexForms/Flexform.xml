<T3DataStructure>
  <sheets>
   
    <!--##########################-->
    <!-- Tab for general settings -->
    <!--##########################-->
    <sDefault>
      <ROOT>
        <TCEforms>
          <sheetTitle>General Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>  
          
          <switchableControllerActions>
            <TCEforms>
              <label>Plugin type</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="1" type="array">
                    <numIndex index="0">Gallery</numIndex>
                    <numIndex index="1">Gallery->list;Gallery->index;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">Album</numIndex>
                    <numIndex index="1">Album->show;DirectoryImport->showImportForm;DirectoryImport->importFromDirectory;ZipImport->showImportForm;ZipImport->importFromZip;Development->createSampleData;Development->deleteAll;Remote->addItemToAlbum;Remote->albumList;Remote->testConnection;Remote->galleryList;ItemList->submitFilter;ItemList->resetFilter;Item->show;Development->testExif;Feeds->rss;Ajax->directoryAutoComplete</numIndex>
                  </numIndex>
                  <numIndex index="3" type="array">
                    <numIndex index="0">ImageList</numIndex>
                    <numIndex index="1">ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show</numIndex>
                  </numIndex>
                  <numIndex index="4" type="array">
                    <numIndex index="0">Create Sample Data</numIndex>
                    <numIndex index="1">Development->createSampleData</numIndex>
                  </numIndex>
                </items>
              </config>
            </TCEforms>
          </switchableControllerActions>


        </el>
      </ROOT>
    </sDefault>
    
    
    
    <list>
      <ROOT>
        <TCEforms>
          <sheetTitle>Album</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.album.selectedAlbumUid>
			<TCEforms>
				<label>Album UID</label>
				<config>
					<type>select</type>
					<treeView>1</treeView>
					<foreign_table>tx_yag_domain_model_album</foreign_table>
					<foreign_field>name</foreign_field>
					<foreign_table_where></foreign_table_where>
					<maxitems>1</maxitems>
				</config>
			</TCEforms>
		</settings.album.selectedAlbumUid>
          
        <settings.album.sorting>
          <TCEforms>
            <label>Sort by</label>
            <config>
              <type>select</type>
              	<items>
				<numIndex index="0" type="array">
					<numIndex index="0">Filename</numIndex>
					<numIndex index="1">filename</numIndex>
				</numIndex>
				<numIndex index="1" type="array">
					<numIndex index="0">Title</numIndex>
					<numIndex index="1">title</numIndex>
				</numIndex>
				<numIndex index="2" type="array">
					<numIndex index="0">Description</numIndex>
					<numIndex index="1">description</numIndex>
				</numIndex>						
				<numIndex index="3" type="array">
					<numIndex index="0">Capture date</numIndex>
					<numIndex index="1">capturedate</numIndex>
				</numIndex>																			
			</items>
			<default></default>
            </config>
          </TCEforms>
        </settings.album.sorting>
          
        </el>
      </ROOT>
    </list>

  </sheets>
</T3DataStructure>